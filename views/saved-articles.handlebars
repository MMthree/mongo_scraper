<div class="saved">
  {{!-- Nav --}}
  <div class="navbar-fixed">
    <nav class="white">
      <div class="container">
        <div class="nav-wrapper">
          <a href="/saved-articles" class="brand-logo black-text"><img class="logo" src="./images/surge_logo.png"></a>
          <a href="" data-target="mobile-demo" class="black-text sidenav-trigger"><i class="material-icons">menu</i></a>
          <ul class="right hide-on-med-and-down">
            <li><a class="black-text nav-home" href="/">Home</a></li>
            <li><a class="black-text nav-saved" href="/saved-articles">Saved Articles</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  <ul class="sidenav pink" id="mobile-demo">
    <li><a class="white-text" href="/">Home</a></li>
    <li><a class="white-text" href="/saved-articles">Saved Articles</a></li>
  </ul>

  {{!-- Nav --}}

  <header>
    <div class="row">
      <div class="col s12 bc-image  center-align">
        <div class="title">
          <h1>THE SURGE</h1>
        </div>
        <div class="title center">
          <h6>Discuss articles collected from theVerge.com</h6>
        </div>
      </div>
    </div>
  </header>


  <div class="container">
    {{#each Article}}
    {{#if saved}}

    <div class="row article-main center-align">

      <div class="col s12 m3">
        <img class="article image" src="{{image}}">
      </div>

      <div class="col s12 m7 article">
        <a class="link" href="{{link}}" target="_blank">
          <h5 class="article headline">{{headline}}</h5>
        </a>
      </div>

      <div class="col s12 m2 article-btn center-align vertical-align">
        <button type="submit" id="discuss" class="discuss btn waves-effect waves-light saved-true pink modal-trigger"
          data-target="modal1" data-id="{{this._id}}">Discuss</button>
        <button type="submit" id="remove" class="remove btn waves-effect waves-light saved-true pink"
          data-id="{{this._id}}">Remove</button>
      </div>

    </div>
    {{/if}}
    {{/each}}

    <!-- Modal Structure -->
    <div id="modal1" class="modal">
      <div class="container">
      <div class="modal-content">

        <div class="comment-headline center-align">
          <h5 class="comment-headline"></h5>
        </div>


        <div class="row comment-body">
          <div class="col s12 comments-header">
            <h5 class="center-align white-text">Comments</h5>
          </div>
          <div class="col s12 comments">
          </div>
        </div>

      
        <div class="row comment-form">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s6">
                <input id="modal-name" type="text" class="validate white-text" minlength="1" maxlength="20">
                <label for="modal-name">Name</label>
              </div>
              <div class="input-field col s12">
                <textarea id="modal-textarea" class="materialize-textarea validate white-text" minlength="1" maxlength="280" data-length="280"></textarea>
                <label for="modal-textarea">Textarea</label>
              </div>
              <div class="input-field col s12 c-submit-div">
              <button class="btn waves-effect waves-light pink comment-submit" type="button">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>

    </div>

  </div> {{!-- /Container --}}

</div> {{!-- /Saved --}}


<script src="/js/saved-articles.js"></script>